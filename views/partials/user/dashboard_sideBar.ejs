<div class="w-1/4 bg-gray-300 p-5" style="background-color: rgb(181, 174, 169);">
    
    <h2 class="text-xl p-2 mb-3 bg-gray-300 text-center rounded-lg cursor-pointer transition duration-300 ease-in-out hover:text-gray-600" onclick="toggleSection('account')">Account</h2>
    <ul id="accountMenu" class="flex flex-col mx-auto justify-center w-4/5 hidden transition-all duration-300 ease-in-out">
    <li class="w-full p-2 mb-2  text-gray-800 text-left"><a href="/user/dashboard" class="block w-full p-2 text-center <%= activeTab === 'profile' ? 'bg-gray-500' : 'bg-gray-400' %> transition duration-300 ease-in-out hover:bg-gray-500 hover:scale-105 hover:shadow-lg"><i class="fas fa-user"></i>  Profile</a></li>
    <li class="w-full p-2 mb-2  text-gray-800 text-left"><a href="/user/showUserAddresses" class="block w-full p-2 text-center <%= activeTab === 'addresses' ? 'bg-gray-500' : 'bg-gray-400' %> transition duration-300 ease-in-out hover:bg-gray-500 hover:scale-105 hover:shadow-lg"><i class="fas fa-map-marker-alt"></i>  Manage address</a></li>
    <li class="w-full p-2 mb-2  text-gray-800 text-left"><a href="/user/orders" class="block w-full p-2 text-center <%= activeTab === 'orders' ? 'bg-gray-500' : 'bg-gray-400' %> transition duration-300 ease-in-out hover:bg-gray-500 hover:scale-105 hover:shadow-lg"><i class="fas fa-box"></i>  Order History</a></li>
    </ul>

    <h2 class="text-xl p-2 mb-3 bg-gray-300 text-center rounded-lg cursor-pointer transition duration-300 ease-in-out hover:text-gray-600" onclick="toggleSection('payments')">Payments</a></h2>
    <ul id="paymentsMenu" class="flex flex-col mx-auto justify-center w-4/5 hidden transition-all duration-300 ease-in-out">
    <li class="w-full p-2 mb-2  text-gray-800 text-left"><a href="/user/wallet" class="block w-full p-2 text-center <%= activeTab === 'wallet' ? 'bg-gray-500' : 'bg-gray-400' %> transition duration-300 ease-in-out hover:bg-gray-500 hover:scale-105 hover:shadow-lg"><i class="fas fa-wallet"></i>  Wallet</a></li>
    </ul>

    <h2 class="text-xl p-2 mb-3 bg-gray-300 text-center rounded-lg cursor-pointer transition duration-300 ease-in-out hover:text-gray-600"><a href="/user/logout">Log Out?</a></h2>
</div>

<script>
function toggleSection(section) {
    const accountMenu = document.getElementById('accountMenu');
    const paymentsMenu = document.getElementById('paymentsMenu');
    if (section === 'account') {
        accountMenu.classList.toggle('hidden');
        paymentsMenu.classList.add('hidden');
        localStorage.setItem('activeSection', 'account');
    } else if (section === 'payments') {
        paymentsMenu.classList.toggle('hidden');
        accountMenu.classList.add('hidden');
        localStorage.setItem('activeSection', 'payments');
    }
}

function setActiveTab(tab) {
    localStorage.setItem('activeTab', tab);
}

// On page load, check localStorage for the active section and tab
document.addEventListener('DOMContentLoaded', function() {
    const activeSection = localStorage.getItem('activeSection');
    const activeTab = localStorage.getItem('activeTab');
    if (activeSection === 'account') {
        document.getElementById('accountMenu').classList.remove('hidden');
    } else if (activeSection === 'payments') {
        document.getElementById('paymentsMenu').classList.remove('hidden');
    }
    if (activeTab) {
        const tabs = document.querySelectorAll('a');
        tabs.forEach(tab => {
            if (tab.getAttribute('href').includes(activeTab)) {
                tab.classList.add('bg-gray-300');
            } else {
                tab.classList.remove('bg-gray-300');
            }
        });
    }
});
</script>